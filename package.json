{
  "name": "lab2pdf",
  "version": "1.0.14",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "test": "mocha --require @babel/register --timeout 5000 tests/template.test.js",
    "prebuild:mac": "npm uninstall sharp && npm install sharp --platform=darwin && electron-builder install-app-deps",
    "build:mac": "electron-builder --mac",
    "prebuild:win": "npm uninstall sharp && npm install sharp --platform=win32 && electron-builder install-app-deps",
    "build:win": "electron-builder --win",
    "prestart": "npm run ensure-platform",
    "predev": "npm run ensure-platform",
    "pretest": "npm run ensure-platform",
    "ensure-platform": "node scripts/ensure-platform.js",
    "release:mac": "node macos-release.js"
  },
  "build": {
    "appId": "com.ripflame.lab2pdf",
    "productName": "Lab2PDF",
    "publish": {
      "provider": "github",
      "owner": "ripflame",
      "repo": "Lab2PDF"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "main.js",
      "package.json",
      "assets/",
      "node_modules/",
      "templates/",
      "ipcHandlers.js",
      "pdfGenerator.js"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "fileAssociations": [
        {
          "ext": "pdf",
          "name": "PDF Document",
          "role": "Viewer"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility"
    },
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/node_modules/sharp/vendor/**/*",
      "**/node_modules/sharp/lib/**/*",
      "**/node_modules/@img/**/*"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A tool to convert lab reports to PDF format.",
  "devDependencies": {
    "@babel/register": "^7.21.0",
    "cross-env": "^7.0.3",
    "electron": "^34.1.1",
    "electron-builder": "^23.6.0",
    "electron-reload": "^2.0.0-alpha.1",
    "mocha": "^10.2.0"
  },
  "dependencies": {
    "electron-updater": "^5.3.0",
    "puppeteer-core": "^24.4.0",
    "sharp": "^0.33.5"
  }
}
